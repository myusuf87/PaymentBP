<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ZF05_E187_PAYM_OVERVIEW.controller.Start"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App id="app">
		<pages>
			<Page showHeader="true" title="{i18n>appTitle}">
				<content>
					<FlexBox height="80%" width="100%" alignItems="Center" justifyContent="Center">
						<Panel>
							<headerToolbar>
								<Toolbar>
									<Title level="H2" text="{i18n>startTitel}"/>
								</Toolbar>
							</headerToolbar>
							<Input id="idSearchInput" class="sapMInputBaseInnerPlaceholder" type="Text" placeholder="{i18n>placeHolder}" width="30em" required="true" submit="onSearch" ariaLabelledBy="idBarrierefreiheitstext"/>
							<Button id="idSearchButton" text="Suchen" type="Emphasized" press="onSearch"/>
						</Panel>
					</FlexBox>
					<core:InvisibleText	id="idBarrierefreiheitstext" text="{i18n>barrierefreiheitSuche}"/>
					</content>
			</Page>
		</pages>
	</App>
</mvc:View>